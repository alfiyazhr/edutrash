                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <!-- Image -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_place_holder"
                    android:scaleType="centerCrop" />

                <!-- Text -->
                <TextView
